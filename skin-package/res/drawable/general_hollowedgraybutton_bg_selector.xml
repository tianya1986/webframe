<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/general_hollowedgraybutton_bg_pressed"/>
            <corners android:radius="4dp"/>
            <padding android:bottom="8dp" android:left="16dp" android:right="16dp"
                     android:top="8dp"/>
            <stroke android:width="0.5dp" android:color="@color/general_hollowedgraybutton_stroke"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/general_hollowedgraybutton_bg_focused"/>
            <corners android:radius="4dp"/>
            <padding android:bottom="8dp" android:left="16dp" android:right="16dp"
                     android:top="8dp"/>
            <stroke android:width="0.5dp" android:color="@color/general_hollowedgraybutton_stroke"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/general_hollowedgraybutton_bg_selected"/>
            <corners android:radius="4dp"/>
            <padding android:bottom="8dp" android:left="16dp" android:right="16dp"
                     android:top="8dp"/>
            <stroke android:width="0.5dp" android:color="@color/general_hollowedgraybutton_stroke"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <padding android:bottom="8dp" android:left="16dp" android:right="16dp"
                     android:top="8dp"/>
            <stroke android:width="0.5dp" android:color="@color/general_hollowedgraybutton_stroke"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <padding android:bottom="8dp" android:left="16dp" android:right="16dp"
                     android:top="8dp"/>
            <stroke android:width="0.5dp" android:color="@color/general_hollowedgraybutton_stroke"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <padding android:bottom="8dp" android:left="16dp" android:right="16dp"
                     android:top="8dp"/>
            <stroke android:width="0.5dp" android:color="@color/general_hollowedgraybutton_stroke"/>
        </shape>
    </item>
</selector>